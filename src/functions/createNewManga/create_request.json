{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "createNewMangaModel",
  "required": ["slug", "title", "status"],
  "properties": {
    "slug": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9]+$",
        "minLength": 5,
        "maxLength": 50
    },
    "title": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": ["reading", "completed", "on_hold", "dropped", "plan_to_read"]
    },
    "mangaStatus": {
      "type": "string",
      "enum": ["finished", "publishing", "not_yet_published"]
    },
    "numChaptersRead": {
      "type": "integer"
    },
    "scores": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "object",
        "properties": {
          "chapter_number": { "type": "number",  "minimum": 0 },
          "score": { "type": "number",  "minimum": 0, "maximum": 10 }
        }
      }
    }
  }
}